{
    debug
    crowdsec {
        api_url http://crowdsec:8080
        api_key "{$CROWDSEC_BOUNCER_API_KEY}"
        ticker_interval 15s
        #disable_streaming
        #enable_hard_fails
    }
}

* {
  route {
    crowdsec
    file_server
    log {
      output file /var/log/caddy/access.log
    }
  }
}
